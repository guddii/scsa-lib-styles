mixin Dropdown(config)
    if !config
        - throw new Error("No configuration provided!");
    if !config.items
        .Dropdown
            .Dropdown__head
                .Dropdown__label #{config.label}
                .Dropdown__title #{config.text}
    else
        .Dropdown.Dropdown--hover
            input(type="checkbox" id="btnControl" + config.label.replace(/\s/g, '') data-dropdown-collapse hidden)
            label.Dropdown__head(for="btnControl" + config.label.replace(/\s/g, ''))
                .Dropdown__label #{config.label}
                .Dropdown__title #{config.text}
                    i.fa.fa-caret-down
            .Dropdown__body
                each item in config.items
                    .Dropdown__item
                        a(href=item.options.url) #{item.options.text}
